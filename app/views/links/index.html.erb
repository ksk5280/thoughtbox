<h3>Links Page</h3>

<div class="row">
  <%= text_field_tag 'search', nil, placeholder: 'Search...',
    id: 'search-bar' %>
</div>

<div class="row">
  <button class="btn btn-default" id="sort-asc" onclick="sortAlphabetically()">
    Sort alphabetically
  </button>
  <button class="btn btn-default" id="filter-read" onclick="filterLinksRead()">
    Links Read
  </button>
  <button class="btn btn-default" id="filter-unread" onclick="filterLinksUnread()">
    Links Unread
  </button>
</div>

<div class="row">
  <h3>Create a new link</h3>
  <%= form_for @link, url: links_path do |f| %>
  <%= f.label :title  %>
  <%= f.text_field :title  %>

  <%= f.label :url  %>
  <%= f.text_field :url  %>

  <%= f.submit "Submit Link" %>
  <% end %>
</div>

<!-- <h3>All links</h3>
<div class="links">
</div> -->

<h3>All links</h3>
<div class="links">
  <% unless @links.nil? || @links.empty? %>
    <ul>
      <% @links.each do |link| %>
        <div class="link" id="<%= link.id %>">
          <% if link.read == true %>
            <li id="<%= link.id %>-link">
              <p class="link-title"><strong><%= link.title %>: </strong></p>
              <p id="<%= link.id %>-link-url" class="link-url read-link"><%= link.url %></p>
            </li>
            <button class="btn btn-default hide" id="<%= link.id %>-read">Mark as Read</button>
            <button class="btn btn-default" id="<%= link.id %>-unread">Mark as Unread</button>
          <% else %>
            <li id="<%= link.id %>">
              <p class="link-title"><strong><%= link.title %>: </strong></p>
              <p id="<%= link.id %>-link-url" class="link-url"><%= link.url %></p>
            </li>
            <button class="btn btn-default" id="<%= link.id %>-read">Mark as Read</button>
            <button class="btn btn-default hide" id="<%= link.id %>-unread">Mark as Unread</button>
          <% end %>
          <button class="btn btn-default" id="<%= link.id %>-edit">Edit</button>
        </div>
      <% end %>
    </ul>
  <% end %>
</div>
