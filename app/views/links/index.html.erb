<h3>Links Page</h3>

<div class="row">
  <%= text_field_tag 'search', nil, placeholder: 'Search...',
    id: 'search-bar' %>
</div>

<div class="row">
  <button class="btn btn-default" id="sort-asc" onclick="sortAlphabetically()">
    Sort alphabetically
  </button>
  <button class="btn btn-default" id="filter-read" onclick="filterLinksRead()">
    Links Read
  </button>
  <button class="btn btn-default" id="filter-unread" onclick="filterLinksUnread()">
    Links Unread
  </button>
</div>

<div class="row">
  <h3>Create a new link</h3>
  <%= form_for @link, url: links_path do |f| %>
  <%= f.label :title  %>
  <%= f.text_field :title  %>

  <%= f.label :url  %>
  <%= f.text_field :url  %>

  <%= f.submit "Submit Link" %>
  <% end %>
</div>

<h3>All links</h3>
<div class="links">
</div>
